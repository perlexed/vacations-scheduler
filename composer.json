{
    "name": "perlexed/vacations-scheduler",
    "description": "Vacations scheduler",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "BSD-3-Clause",
    "version": "1.3.0",
    "config": {
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "google/apiclient": "v2.15.1",
        "guiguiboy/php-cli-progress-bar": "^0.0.4",
        "ext-mbstring": "*",
        "sentry/sdk": "*",
        "vlucas/phpdotenv": "^5.4",
        "php-di/php-di": "^6.4"
    },
    "scripts": {
        "run-app": "php ./start.php",
        "run-app-dry": "php ./start.php dry",
        "test": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "app\\": "app"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
